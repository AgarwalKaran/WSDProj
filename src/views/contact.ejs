            };
            console.log(data);

            fetch('/contact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    // Redirect to login page on success
                    msg.value='';
                    alert('Feedback Sent');
                } else {
                    alert(result.message || 'Server Busy');
                }
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>
